<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewhome_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    cardview:cardBackgroundColor="@color/cardview_dark_background"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="50dp"
    cardview:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewcategory"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            tools:srcCompat="@drawable/cat_home" />


        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_alignParentRight="true">


            <TextView
                android:id="@+id/category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/category"

                android:textAllCaps="true"
                android:textColor="@color/Titlehome"
                android:textSize="25sp"
                android:textStyle="bold" />


        </RelativeLayout>



        <TextView
            android:id="@+id/categorydesc"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewcategory"
            android:layout_marginStart="0dp"
            android:layout_toEndOf="@+id/imageViewcategory"
            android:layout_below="@+id/category_title"
            android:hint="@string/categorydesc"
            android:textAlignment="center"
            android:textColor="@color/Titlehome"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/imageViewcategory"
            android:layout_marginLeft="0dp"
            tools:ignore="NotSibling" />


    </RelativeLayout>



</android.support.v7.widget.CardView>